# Fonction permettant de trouver un fichier dat dans le DATAPATH
function get_from_datapath()
{
    echo ""
    local file=$1
    for i in `echo $DATAPATH | sed 's/:/ /g'`
    do
       if [ -s $i/$file ]; then
          echo "File found in DATAPATH : $i"
          echo -e "$(ls $i/$file)\n"
          break
       elif [ -s $i/dat/$file ]; then
          echo "File found in DATAPATH : $i"
          echo -e "$(ls $i/dat/$file)\n"
          break
       fi
    done
}

