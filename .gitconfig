[core]
	autocrlf = false

[difftool]
  prompt = true
[diff]
  tool = nvimdiff
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
  tool = nvimdiff
  conflictstyle = diff3
[mergetool]
  keepBackup = false
  prompt = true
[mergetool "nvimdiff"]
  cmd = "nvim  -d $MERGED $LOCAL $REMOTE -c 'wincmd J | wincmd ='"

